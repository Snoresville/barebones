<root>
	
	<styles>
		<include src="file://{resources}/styles/custom_game/quest/quest.css"/>
	</styles>
	
	
	<scripts>
		<include src="file://{resources}/scripts/custom_game/quest/quest.js"/>
	</scripts>
	
	
	<snippets>
		<snippet name = "Quest">
		
			<Panel class = "Quest">
				
				<Panel id = "LeftSide">
					<Panel id = "QuestImage">
						<Image src = "file://{resources}/images/custom_game/quest/quest_icon.png"/>
					</Panel>
				</Panel>
				
				<Panel id = "RightSide">
					<Panel id = "TopSide">
						<Label id = "QuestTitle" text = "Sample Title"/>
					</Panel>
					<Panel id = "BottomSide">
						<Panel id = "QuestBackground" />
						
						<Label id = "QuestDescription" text = "Sample Description" />
						
						<Label id = "QuestProgress" text = "0/1" />
						
					</Panel>
				</Panel>
				
				
			</Panel>
			
		</snippet>
	</snippets>
	
	
	<Panel class = "QuestPanel">
	
		<Label id = "QuestPanelTitle" text = "  Quest List  "/>
		
		<Panel id = "QuestList">
			
		</Panel>
		
	</Panel>
	
